{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "replicas": {
      "type": "integer",
      "minimum": 1
    },
    "appName": {
      "type": "string"
    },
    "debug": {
      "type": "boolean"
    },
    "service": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        },
        "serviceType": {
          "type": "string"
        }
      }
    }
  }
}

