{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "additionalProperties": false,
  "properties": {
    "apiVersion": {
      "default": "example.com/v1alpha1",
      "title": "apiVersion",
      "type": "string"
    },
    "appName": {
      "default": "myapp",
      "description": "Application name",
      "title": "appName",
      "type": "string"
    },
    "debug": {
      "default": true,
      "description": "Enable debug mode",
      "title": "debug",
      "type": "boolean"
    },
    "env": {
      "description": "List of environment variables",
      "items": {
        "anyOf": [
          {
            "additionalProperties": false,
            "properties": {
              "name": {
                "default": "LOG_LEVEL",
                "description": "Variable name",
                "title": "name",
                "type": "string"
              },
              "value": {
                "default": "info",
                "description": "Variable value",
                "title": "value",
                "type": "string"
              }
            },
            "required": [],
            "type": "object"
          }
        ],
        "required": []
      },
      "title": "env",
      "type": "array"
    },
    "kind": {
      "default": "Example",
      "title": "kind",
      "type": "string"
    },
    "replicas": {
      "default": 3,
      "description": "Number of replicas",
      "minimum": 1,
      "title": "replicas",
      "type": "integer"
    },
    "service": {
      "additionalProperties": false,
      "description": "Service configuration",
      "properties": {
        "port": {
          "default": 8080,
          "description": "Service port",
          "title": "port",
          "type": "integer"
        },
        "serviceType": {
          "default": "ClusterIP",
          "description": "Service type",
          "title": "serviceType",
          "type": "string"
        }
      },
      "required": [],
      "title": "service",
      "type": "object"
    }
  },
  "required": [],
  "type": "object"
}